// ==UserScript==
// @name         Remove Messenger Notification Box
// @match        *://www.messenger.com/*
// @run-at       document-end
// @description  don't let meta get you to click on facebook platform!
// @author       ram6000mhz
// ==/UserScript==

(function() {
    'use strict';

    function removeAnnoyingDiv() {
        document.querySelectorAll(
            'div[data-visualcompletion="ignore-dynamic"].x9f619.x1n2onr6.x1ja2u2z.x1lliihq'
        ).forEach(el => el.remove());
    }

    // Run once
    removeAnnoyingDiv();

    // Watch for re-insertion
    const observer = new MutationObserver(removeAnnoyingDiv);
    observer.observe(document.body, { childList: true, subtree: true });
})();
